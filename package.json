{
	"name": "garden-cms",
	"private": true,
	"workspaces": [
		"client",
		"server",
		"note-api"
	],
	"scripts": {
		"client": "yarn workspace @garden-cms/client",
		"server": "yarn workspace @garden-cms/server",
		"note-api": "yarn workspace @garden-cms/note-api",
		"dev": "yarn wsrun dev",
		"build": "yarn note-api build && yarn server build && yarn client build",
		"grow": "yarn client build && yarn client export"
	},
	"dependencies": {
		"cross-env": "^7.0.3",
		"wsrun": "^5.2.4"
	}
}
